{
  "info": {
    "_postman_id": "8d021d94-6ce1-4ce4-902c-0dfd340dc5f5",
    "name": "URL Shortener API",
    "description": "Requests for registering, authenticating, shortening URLs, listing/deleting links, and following redirects in the URL Shortener service.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Secret123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "register"
              ]
            },
            "description": "Register a new account and receive an access token."
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.collectionVariables.set(\"jwtToken\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Secret123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "login"
              ]
            },
            "description": "Authenticate and cache the JWT for subsequent requests."
          },
          "response": []
        }
      ]
    },
    {
      "name": "URL Management",
      "item": [
        {
          "name": "Shorten URL",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "if (jsonData.id) {",
                  "    pm.collectionVariables.set(\"shortUrlId\", jsonData.id);",
                  "}",
                  "if (jsonData.shortUrl) {",
                  "    const shortUrl = jsonData.shortUrl;",
                  "    const code = shortUrl.substring(shortUrl.lastIndexOf('/') + 1);",
                  "    pm.collectionVariables.set(\"shortCode\", code);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwtToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"originalUrl\": \"https://example.com/some/very/long/link\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/shorten",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "shorten"
              ]
            },
            "description": "Create a short URL for the provided destination."
          },
          "response": []
        },
        {
          "name": "List URLs",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwtToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/urls",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "urls"
              ]
            },
            "description": "Return all short URLs owned by the authenticated user."
          },
          "response": []
        },
        {
          "name": "Deactivate URL",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwtToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/urls/{{shortUrlId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "urls",
                "{{shortUrlId}}"
              ]
            },
            "description": "Deactivate a short URL by identifier."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Redirect",
      "item": [
        {
          "name": "Follow Short URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/r/{{shortCode}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "r",
                "{{shortCode}}"
              ]
            },
            "description": "Resolve the short code and follow the redirect."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "jwtToken",
      "value": ""
    },
    {
      "key": "shortUrlId",
      "value": ""
    },
    {
      "key": "shortCode",
      "value": ""
    }
  ]
}

